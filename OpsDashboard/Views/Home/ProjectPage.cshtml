@model OpsDashboard.Models.Project


<div>
  @if (Model != null)
  {
    <h3> @Model.Name</h3>
    <ul>
      @if (Model.UsersOnProject.Count > 0)
      {
        foreach (var user in Model.UsersOnProject)
        {
          <li>
            <a href="@user.FullName">@user.FullName</a>
          </li>
        }
      }
    </ul>

    if (Model.Tags.Count > 0)
              {
                string tags = string.Join(", ", Model.Tags);
                <div>Technologies Used: @tags</div>
                }
              }
</div>