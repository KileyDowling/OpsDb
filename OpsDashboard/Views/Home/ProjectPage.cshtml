@model OpsDashboard.Models.Project


  @if (Model != null)
  {
    <h3> @Model.Name</h3>
    <h4>Team Members</h4>
    <ul>
      @if (Model.UsersOnProject != null && Model.UsersOnProject.Count > 0)
      {
        foreach (var user in Model.UsersOnProject)
        {
          <li>
            @{
              string teamMember = user.FullName + ", " + user.Title;
            }
            @Html.ActionLink(teamMember, "UserProfile", new {userId = user.EmployeeId})
          </li>
        }
      }
    </ul>
    <section>
      <h4>Technology Used:</h4>
      @if (Model.Tags.Count > 0)
      {
        <ul>
          @foreach (string tag in Model.Tags)
          {
            <li>@tag</li>
          }
        </ul>
      }
    </section>
  }
