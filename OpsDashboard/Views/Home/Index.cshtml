@model OpsDashboard.Models.DashboardVM

<h3> Dashboard</h3>

<section>
  <h4>Projects</h4>
    @if (Model.Projects != null && Model.Projects.Count > 0)
    {
      <ul>
        @foreach (var project in Model.Projects)
        {
          <li>
            @Html.ActionLink(project.Name, "ProjectPage", new { id = project.ProjectId })
          </li>
        }
      </ul>
    }
  </section>


<section>
  <h4>Team</h4>
  <ul>
    @if (Model.Users != null && Model.Users.Count > 0)
    {
      foreach (var user in Model.Users)
      {
        <li>
          @Html.ActionLink(user.FullName, "UserProfile", new {userId = user.EmployeeId})
        </li>
      }
    }
  </ul>
</section>
